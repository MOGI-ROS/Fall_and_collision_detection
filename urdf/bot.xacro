<?xml version='1.0'?>

<robot name="fncd_bot" xmlns:xacro="http://www.ros.org/wiki/xacro">
 <xacro:include filename="$(find fall_and_collision_detection)/urdf/bot.gazebo" />
 <link name="base_footprint"></link>

 <joint name="base_footprint_joint" type="fixed">
<origin xyz="0 0 0" rpy="0 0 0" />
<parent link="base_footprint"/>
<child link="base_link" />
</joint>

 <link name='base_link'>
<pose>0 0 0.1 0 0 0</pose>

 <inertial>
<mass value="15.0"/>
<origin xyz="0 0 0" rpy="0 0 0"/>
<inertia
ixx="0.1" ixy="0" ixz="0"
iyy="0.1" iyz="0"
izz="0.1"
/>
</inertial>

 <collision name='base_collision'>
<origin xyz="0 0 0" rpy="0 0 0"/>
<geometry>
<cylinder radius="0.15" length=".05"/>
</geometry>
</collision>

 <visual name='base_link_visual'>
<origin xyz="0 0 0" rpy="0 0 0"/>
<geometry>
<cylinder radius="0.15" length=".05"/>
</geometry>
</visual>

 <collision name='caster_collision'>
<origin xyz="-0.1 0 -0.05" rpy="0 0 0"/>
<geometry>
<sphere radius="0.025"/>
</geometry>
</collision>

 <visual name='caster_visual'>
<origin xyz="-0.1 0 -0.05" rpy="0 0 0"/>
<geometry>
<sphere radius="0.025"/>
</geometry>
</visual>


 </link>

 <joint type="continuous" name="left_wheel_joint">
    <origin xyz="0.06 0.1 -0.05" rpy="0 0 0"/>
    <child link="left_wheel"/>
    <parent link="base_link"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <link name='left_wheel'>
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/> 
      <geometry>
        <cylinder radius=".025" length=".01"/>
      </geometry>
    </collision>

    <visual name='left_wheel_visual'>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius=".025" length=".01"/>
      </geometry>
    </visual>
  </link>

  <joint type="continuous" name="right_wheel_joint">
    <origin xyz="0.06 -0.1 -0.05" rpy="0 0 0"/>
    <child link="right_wheel"/>
    <parent link="base_link"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <link name='right_wheel'>
    <inertial>
      <mass value="5.0"/>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/> 
      <geometry>
        <cylinder radius=".025" length=".01"/>
      </geometry>
    </collision>

    <visual name='right_wheel_visual'>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius=".025" length=".01"/>
      </geometry>
    </visual>
  </link>

  <!-- Lidar -->
  <joint type="fixed" name="scan_joint">
    <origin xyz="0.0 0 0.05" rpy="0 0 0"/>
    <child link="scan_link"/>
    <parent link="base_link"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
  </joint>

  <link name='scan_link'>
    <inertial>
      <mass value="1e-5"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
          ixx="1e-6" ixy="0" ixz="0"
          iyy="1e-6" iyz="0"
          izz="1e-6"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy="0 0 0"/> 
      <geometry>
        <box size=".1 .1 .1"/>
      </geometry>
    </collision>

    <visual name='scan_link_visual'>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename = "package://bme_gazebo_sensors/meshes/lidar.dae"/>
      </geometry>
    </visual>

  </link>

</robot>